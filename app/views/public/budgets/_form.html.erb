<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <div class="card shadow mt-5">
      <div class="card-body">

        <h2 class="d-flex justify-content-center">収支を<%= button_text %></h2>

        <%= form_with model: budget do |f| %>
          <%= render "layouts/error_messages", model: f.object %>

          <div class="mb-2">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-2">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 4, class: "form-control" %>
          </div>

          <div class="mb-2">
            <%= f.label :category %>
            <%= f.select :category, Budget.categories.map { |k, v| [I18n.t("enums.budget.category.#{k}"), k] }, {}, { class: "form-control" } %>
          </div>

          <div class="mb-2">
            <%= f.label :amount %>
            <%= f.text_field :amount, class: "form-control" %>
          </div>

          <div class="mb-2">
            <%= f.label :payment_date %>
            <%= f.date_field :payment_date, class: "form-control" %>
          </div>

          <div class="my-4 d-flex justify-content-center">
            <%= f.submit button_text, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


