<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t 'activerecord.attributes.post.title' %></th>
      <th><%= t 'activerecord.attributes.post.body' %></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= simple_format post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>