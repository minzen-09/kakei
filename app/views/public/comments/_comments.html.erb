<table class="table">
  <thead>
    <tr>
      <th><%= t 'activerecord.attributes.comment.body' %></th>
      <th><%= t 'activerecord.attributes.comment.user' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td style="word-break:break-all;"><%= simple_format comment.body %></td>
        <td><%= link_to comment.user.name, comment.user %></td>
        <td>
          <% if current_user == comment.user %>
            <%= link_to '削除', comment, method: :delete, data: { confirm: "本当に削除しますか" }, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>