<table class="table">
  <thead>
    <tr>
      <th><%= t 'activerecord.attributes.comment.body' %></th>
      <th><%= t 'activerecord.attributes.comment.user' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td style="word-break:break-all;"><%= simple_format comment.body %></td>
        <td><%= link_to comment.user.name, admin_user_path(comment.user) %></td>
        <td><%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>