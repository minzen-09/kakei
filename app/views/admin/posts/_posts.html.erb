<table class="table">
  <thead>
    <tr>
      <th><%= t 'activerecord.attributes.post.title' %></th>
      <th><%= t 'activerecord.attributes.post.body' %></th>
      <th><%= t 'activerecord.attributes.post.user' %></th>
      <% if user_signed_in? %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, admin_post_path(post) %></td>
        <td style="word-break:break-all;"><%= simple_format post.body %></td>
        <td><%= link_to post.user.name, admin_user_path(post.user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>